@page "/Login"



<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="text-center w-50">
            <form>
                <div class="col align-self-center text-uppercase pt-5 pb-4">
                    <h2>sign in</h2>
                    <hr class="custom_hr_solid" />
                </div>
                    <div class="form-group row ml-0 mr-0">
                        <label for="staticEmail" class="col-sm-4 col-form-label text-left">Username</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="staticEmail">
                        </div>
                    </div>
                    <div class="form-group row ml-0 mr-0">
                        <label for="inputPassword" class="col-sm-4 col-form-label text-left">Password</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="inputPassword">
                        </div>
                    </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="remember_me">
                    <label class="form-check-label" for="exampleCheck1">Remember Me</label>
                </div>
                <button type="submit" class="btn btn-dark primary_button shadow text-uppercase">Log In</button>
            </form>
        </div>
    </div>
</div>

