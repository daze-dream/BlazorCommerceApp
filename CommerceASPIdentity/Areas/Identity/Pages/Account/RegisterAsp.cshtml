@page

@model RegisterAspModel
@{ ViewData["Title"] = "Register (Step 1 of 2)"; }

<link href="/css/site.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="text-center w-80">
            <section>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="col align-self-center text-uppercase pt-5 pb-4">
                        <h2>@ViewData["Title"]</h2>
                        <n1>Create A New Account:</n1>
                        <hr class="custom_hr_solid" />
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="InputASP.UserId"></label>
                        <input asp-for="InputASP.UserId" class="form-control" />
                        <span asp-validation-for="InputASP.UserId" class="text-danger"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="InputASP.Email"></label>
                        <input asp-for="InputASP.Email" class="form-control" />
                        <span asp-validation-for="InputASP.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InputASP.Password"></label>
                        <input asp-for="InputASP.Password" class="form-control" />
                        <span asp-validation-for="InputASP.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InputASP.ConfirmPassword"></label>
                        <input asp-for="InputASP.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="InputASP.ConfirmPassword" class="text-danger"></span>
                    </div>


                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
        </div>
