@page

@model RegisterModel
@{
    ViewData["Title"] = "Register (Step 2 of 2)";
}

<link href="/css/site.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="text-center w-80">
            <section>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="col align-self-center text-uppercase pt-5 pb-4">
                        <h2>@ViewData["Title"]</h2>
                        <n1>Create A New Account:</n1>
                        <hr class="custom_hr_solid" />
                    </div>
                                <div class="form-group">
                                    <label asp-for="Input.AddressOne"></label>
                                    <input asp-for="Input.AddressOne" class="form-control" />
                                    <span asp-validation-for="Input.AddressOne" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.AddressTwo"></label>
                                    <input asp-for="Input.AddressTwo" class="form-control" />
                                    <span asp-validation-for="Input.AddressTwo" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="form-group col">
                                        <label asp-for="Input.City"></label>
                                        <input asp-for="Input.City" class="form-control" />
                                        <span asp-validation-for="Input.City" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col">
                                        <label asp-for="Input.State"></label>
                                        <input asp-for="Input.State" class="form-control" />
                                        <span asp-validation-for="Input.State" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col">
                                        <label asp-for="Input.ZIP"></label>
                                        <input asp-for="Input.ZIP" class="form-control" />
                                        <span asp-validation-for="Input.ZIP" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col">
                                        <label asp-for="Input.Country"></label>
                                        <input asp-for="Input.Country" class="form-control" />
                                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.PhoneNum"></label>
                                        <input asp-for="Input.PhoneNum" class="form-control" />
                                        <span asp-validation-for="Input.PhoneNum" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.DOB"></label>
                                    <input asp-for="Input.DOB" class="form-control" />
                                    <span asp-validation-for="Input.DOB" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary">Register</button>
                            </form>
                        </div>
