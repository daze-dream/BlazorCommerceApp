@page

@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<link href="/css/site.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="text-center w-50">
            <section>
                <form id="account" method="post">
                    <div class="col align-self-center text-uppercase pt-5 pb-4">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                    <hr class="custom_hr_solid" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group  row ml-0 mr-0">
                        <label class="col-sm-4 col-form-label text-left" asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <div class="col-sm-12">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row ml-0 mr-0">
                        <label class="col-sm-4 col-form-label text-left" asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <div class="col-sm-12">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox" id="remember_me">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="primary_button"">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword"><span class="login_small_links">Forgot your password?</span></a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><span class="login_small_links">Register as a new user</span></a>
                        </p>
                    </div>
                </form>
            </section>
        </div>

